					<div class="form-group row"><label class="col-sm-2 control-label">{$PLG_FULLNAME}</label>
						<div class="col-sm-10">{$fullname}</div>
					</div>
					<div class="form-group row"><label class="col-sm-2 control-label">{$PLG_PLACE}</label>
							<div class="col-sm-10">{$place}</div>
					</div>
